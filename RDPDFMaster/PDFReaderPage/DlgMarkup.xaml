<UserControl
    x:Class="RDPDFReader.annotui.DlgMarkup"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignWidth="180" Background="#FFE0E0E0" Height="240">

    <RelativePanel Padding="10,10,10,10" Background="#FFE0E0E0">
        <TextBlock x:Name="labTitle" RelativePanel.AlignLeftWithPanel="True" RelativePanel.AlignRightWithPanel="True" Text="Text Selection" FontSize="20" Height="32" />
        <RadioButton x:Name="radClipboard" Content="Copy To Clipboard" RelativePanel.Below="labTitle" />
        <RadioButton x:Name="radHighlight" Content="Highlight" RelativePanel.Below="radClipboard" />
        <RadioButton x:Name="radUnderline" Content="Underline" RelativePanel.Below="radHighlight" />
        <RadioButton x:Name="radStrikeout" Content="Strikeout" RelativePanel.Below="radUnderline" />
        <RadioButton x:Name="radSquiggly" Content="Squiggly" RelativePanel.Below="radStrikeout" />
        <RadioButton x:Name="radEraser" Content="Eraser" RelativePanel.Below="radSquiggly" />
    </RelativePanel>
</UserControl>
