<Page
    x:Class="PDFViewerSDK_Win10.AboutPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PDFViewerSDK_Win10"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.TopAppBar>
        <AppBar x:Name="mAppBar" IsOpen="True" IsSticky="True" Background="{StaticResource ApplicationPageBackgroundThemeBrush}">
            <Grid x:Name="BackPanel">
                <Button x:Name="backButton" 
                       Click="OnBtnGoBack" 
                       IsEnabled="{Binding Frame.CanGoBack, ElementName=pageRoot}" 
                       Style="{StaticResource BackButtonStyle}" 
                       Margin="10,10,0,0" 
                       Foreground="Black" 
                       BorderBrush="Black" 
                       Background="Black" 
                       VerticalAlignment="Top"/>
            </Grid>
        </AppBar>
    </Page.TopAppBar>
    
    <Grid Background="{StaticResource ApplicationPageBackgroundThemeBrush}">
        <ScrollViewer VerticalScrollBarVisibility="Auto" 
                     HorizontalScrollBarVisibility="Disabled"
                     Padding="20">
            <StackPanel MaxWidth="600" 
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center">
                
                <!-- Titolo principale -->
                <TextBlock Text="Radaee PDF Reader" 
                          FontSize="32" 
                          FontWeight="Bold"
                          HorizontalAlignment="Center" 
                          Margin="0,0,0,40"
                          TextWrapping="Wrap"/>
                
                <!-- Sezione informazioni -->
                <StackPanel Spacing="20">
                    
                    <!-- Email -->
                    <StackPanel>
                        <TextBlock Text="Email:" 
                                  FontSize="20" 
                                  FontWeight="SemiBold"
                                  Margin="0,0,0,5"/>
                        <HyperlinkButton Content="support@radaeepdf.com" 
                                        NavigateUri="mailto:support@radaeepdf.com"
                                        FontSize="18"
                                        Padding="0"
                                        HorizontalAlignment="Left"/>
                    </StackPanel>
                    
                    <!-- SDK -->
                    <StackPanel>
                        <TextBlock Text="PDFViewer SDK:" 
                                  FontSize="20" 
                                  FontWeight="SemiBold"
                                  Margin="0,0,0,5"/>
                        <HyperlinkButton Content="https://www.radaeepdf.com" 
                                        NavigateUri="https://www.radaeepdf.com"
                                        FontSize="18"
                                        Padding="0"
                                        HorizontalAlignment="Left"/>
                    </StackPanel>
                    
                    <!-- Sito Web -->
                    <StackPanel>
                        <TextBlock Text="Web site:" 
                                  FontSize="20" 
                                  FontWeight="SemiBold"
                                  Margin="0,0,0,5"/>
                        <HyperlinkButton Content="https://www.radaeepdf.com" 
                                        NavigateUri="https://www.radaeepdf.com"
                                        FontSize="18"
                                        Padding="0"
                                        HorizontalAlignment="Left"/>
                    </StackPanel>
                    
                    <!-- Informazioni sviluppatore -->
                    <StackPanel Margin="0,20,0,0">
                        <TextBlock Text="Developed by: Radaee Studio" 
                                  FontSize="18"
                                  HorizontalAlignment="Center"
                                  Margin="0,0,0,10"/>
                        <TextBlock Text="All rights reserved." 
                                  FontSize="16"
                                  FontStyle="Italic"
                                  HorizontalAlignment="Center"
                                  Foreground="Gray"/>
                    </StackPanel>
                    
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
