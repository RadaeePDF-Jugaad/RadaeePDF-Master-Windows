<UserControl
    x:Class="RDPDFReader.annotui.DlgPropMarkup"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:RDPDFReader.annotui"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Height="210"
    Width="310">

    <RelativePanel Background="#FFE0E0E0">
        <TextBlock x:Name="labTitle" RelativePanel.AlignLeftWithPanel="True" RelativePanel.AlignRightWithPanel="True" Text="Markup Property" FontSize="20" Height="32"/>
        
        <TextBlock x:Name="labFColor" RelativePanel.Below="labTitle" Text="color:" Width="80" Margin="0,10,0,0"/>
        <local:UIColorButton x:Name="btnFColor" RelativePanel.RightOf="labFColor" RelativePanel.Below="labTitle" Width="60" Height="30" Margin="0,5,0,0"/>

        <TextBlock x:Name="labAlpha" RelativePanel.Below="btnFColor" Text="alpha:" Width="80" Margin="0,15,0,0"/>
        <Slider x:Name="slAlpha" RelativePanel.RightOf="labAlpha" RelativePanel.Below="btnFColor" Width="160" Height="40" Margin="0,5,0,0"/>
        <TextBlock x:Name="labAlphaVal" RelativePanel.RightOf="slAlpha" RelativePanel.Below="btnFColor" Width="40" Margin="5,15,0,0"/>
        <CheckBox x:Name="chkLocked" Content="Locked" RelativePanel.Below="slAlpha" Margin="0,10,0,0"/>
    </RelativePanel>
</UserControl>
