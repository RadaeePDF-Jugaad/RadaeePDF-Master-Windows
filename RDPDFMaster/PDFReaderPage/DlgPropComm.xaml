<UserControl
    x:Class="RDPDFReader.annotui.DlgPropComm"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:RDPDFReader.annotui"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Width="330"
    Height="360">

    <RelativePanel Background="#FFE0E0E0">
        <TextBlock x:Name="labTitle" RelativePanel.AlignLeftWithPanel="True" RelativePanel.AlignRightWithPanel="True" Text="Annotation Property" FontSize="20" Height="32"/>
        
        <TextBlock x:Name="labLWidth" RelativePanel.Below="labTitle" Text="line width:" Width="80" Margin="0,10,0,0"/>
        <TextBox x:Name="txtLWidth" RelativePanel.RightOf="labLWidth" RelativePanel.Below="labTitle" Width="100" Height="30" Margin="0,5,0,0"/>

        <TextBlock x:Name="labLStyle" RelativePanel.Below="txtLWidth" Text="line style:" Width="80" Margin="0,10,0,0"/>
        <local:UILStyleButton x:Name="btnLStyle" RelativePanel.RightOf="labLStyle" RelativePanel.Below="txtLWidth" Width="60" Height="30" Margin="0,5,0,0"/>

        <TextBlock x:Name="labLColor" RelativePanel.Below="btnLStyle" Text="line color:" Width="80" Margin="0,10,0,0"/>
        <local:UIColorButton x:Name="btnLColor" RelativePanel.RightOf="labLColor" RelativePanel.Below="btnLStyle" Width="60" Height="30" Margin="0,5,0,0"/>

        <TextBlock x:Name="labFColor" RelativePanel.Below="btnLColor" Text="fill color:" Width="80" Margin="0,10,0,0"/>
        <local:UIColorButton x:Name="btnFColor" RelativePanel.RightOf="labFColor" RelativePanel.Below="btnLColor" Width="60" Height="30" Margin="0,5,0,0"/>

        <TextBlock x:Name="labAlpha" RelativePanel.Below="btnFColor" Text="alpha:" Width="80" Margin="0,15,0,0"/>
        <Slider x:Name="slAlpha" RelativePanel.RightOf="labAlpha" RelativePanel.Below="btnFColor" Width="160" Height="40" Margin="0,5,0,0"/>
        <TextBlock x:Name="labAlphaVal" RelativePanel.RightOf="slAlpha" RelativePanel.Below="btnFColor" Width="40" Margin="5,15,0,0"/>
        <CheckBox x:Name="chkLocked" Content="Locked" RelativePanel.Below="slAlpha" Margin="0,10,0,0"/>
    </RelativePanel>
</UserControl>
